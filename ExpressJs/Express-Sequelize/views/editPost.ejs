<%- include("includes/header.ejs") %>

<section class="mx-auto">
  <a href="/">Go back home</a>
  <h1 class="title">Edit your post.</h1>
  <form method="post" action="/admin/post-edit">
    <input type="text" name="post_id" value="<%= post.id %>" hidden>
    <div>
      <label for="title">Enter Title</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= post.title %>"
        required
      />
    </div>
    <div>
      <label for="photo">Enter Photo</label>
      <input
        type="text"
        id="photo"
        name="photo"
        value="<%= post.imgUrl %>"
        required
      />
    </div>
    <div>
      <label for="description">Description</label>
      <textarea
        name="description"
        id="description"
        cols="30"
        rows="10"
        required 
      >
<%= post.description %>
      </textarea>
    </div>
    <button>Update Post</button>
  </form>
</section>

<%- include("includes/footer.ejs") %>
